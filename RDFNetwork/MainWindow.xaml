<Window x:Class="RDFNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RDFNetwork"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Title="MainWindow" Height="600" Width="1100"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        MinHeight="500"
        MinWidth="900"
        ResizeMode="CanResizeWithGrip">

  <!-- WindowChrome for resizing with AllowTransparence -->
  <WindowChrome.WindowChrome>
    <WindowChrome
      CaptionHeight="1"
      CornerRadius="0"
      ResizeBorderThickness="4"
      GlassFrameThickness="0" />
  </WindowChrome.WindowChrome>

  <!-- Main window -->
  <Grid MouseDown="DragWindow">
    <Grid.RowDefinitions>
      <RowDefinition Height="55" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid>
      <Button Height="55" Background="Transparent" Foreground="Transparent">
        <materialDesign:PackIcon Foreground="Black" Kind="Menu" Width="40" Height="40" VerticalAlignment="Center"
                                 HorizontalAlignment="Center" />
      </Button>
    </Grid>

    <!-- Topbar -->
    <Grid Grid.Row="0" Grid.Column="1 " Grid.ColumnSpan="2" Background="#262D4E">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="10*" />
        <ColumnDefinition Width="50" />
        <ColumnDefinition Width="50" />
        <ColumnDefinition Width="50" />
      </Grid.ColumnDefinitions>
      <TextBlock Grid.ColumnSpan="5" Text="RDF Neural network" FontSize="18" Foreground="WhiteSmoke"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center" />

      <!-- Minimalize button -->
      <Button Click="OnClickMinimalize" Grid.Column="1" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black"
              Height="55" Width="50"
              Padding="0">
        <materialDesign:PackIcon Margin="0 18 0 0" Kind="WindowMinimize" Width="40" Height="40"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
      </Button>

      <!-- Maximalize button -->
      <Button Click="OnClickMaximalize" Grid.Column="2" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black"
              Height="55" Width="50"
              Padding="0">
        <materialDesign:PackIcon Kind="WindowMaximize" Width="40" Height="45"
                                 HorizontalAlignment="Center" VerticalAlignment="Center" />
      </Button>

      <!-- Close button -->
      <Button Click="OnClickClose" Grid.Column="3" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black"
              Height="55" Width="50"
              Padding="0">
        <materialDesign:PackIcon Kind="CloseBox" Width="40" Height="45" HorizontalAlignment="Center"
                                 VerticalAlignment="Center" />
      </Button>
    </Grid>

    <!-- Sidebar -->
    <StackPanel Grid.Row="1" Grid.Column="0" Background="#4A4F51">
      <Button Height="50"  BorderBrush="Transparent" Background="Transparent" Foreground="AliceBlue" >
       <StackPanel Orientation="Horizontal">
          <materialDesign:PackIcon Kind="Numeric1Box" Width="30" Height="30" />
          <TextBlock Text="Approximation" VerticalAlignment="Center"/>
       </StackPanel>
      </Button>
      <Button Height="50" BorderBrush="Transparent" Background="Transparent" Foreground="AliceBlue" >
        <StackPanel Orientation="Horizontal">
          <materialDesign:PackIcon Kind="Numeric2Box" Width="30" Height="30"/>
          <TextBlock Text="Classification" VerticalAlignment="Center"/>
          </StackPanel>
      </Button>
      <Button Height="50" BorderBrush="Transparent" Background="Transparent" Foreground="AliceBlue" >
        <StackPanel Orientation="Horizontal">
          <materialDesign:PackIcon Kind="Numeric3Box" Width="30" Height="30"/>
          <TextBlock Text="Approximation" VerticalAlignment="Center"/>
          </StackPanel>
      </Button>
    </StackPanel>
  </Grid>
</Window>